# Flask Configuration
# IMPORTANT: Rename this file to .env after uploading to PythonAnywhere
# Add .env to your .gitignore file to keep secrets safe

# Secret key for Flask sessions (CHANGE THIS!)
SECRET_KEY=your-secret-key-change-this-to-random-string

# Admin credentials (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=False

# Database (will be auto-configured based on file location)
# No need to change this unless you want a different name
DATABASE_NAME=portfolio.db
